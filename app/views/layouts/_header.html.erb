<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to Settings.app_name, root_path, id: "logo" %>
    <ul class="nav navbar-nav navbar-right">
      <li><%= link_to t("header.home"), static_pages_home_path %></li>
      <li><%= link_to t("header.help"), static_pages_help_path %></li>
      <% if logged_in? %>
        <li class="dropdown">
          <%= link_to "#", id: "account", class: "dropdown-toggle", "data-toggle": "dropdown" do %>
            <%= t("account") %>
            <b class="caret"></b>
          <% end %>
          <ul class="dropdown-menu" id="dropdown-menu">
            <li><%= link_to t("profile"), user_path(id: current_user.id) %></li>
            <li><%= link_to t("settings"), "#" %></li>
            <li class="divider"></li>
            <li><%= link_to t("logout"), logout_path, data: { "turbo-method": :delete }  %></li>
          </ul>
        </li>
      <% else %>
        <li><%= link_to t("login"), login_path %></li>
      <% end %>

      <li><%= link_to t("language.english"), locale: :en %></li>
      <li><%= link_to t("language.vietnamese"), locale: :vi %></li>
    </ul>
  </div>
</header>
